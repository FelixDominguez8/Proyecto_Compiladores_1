program FuncionesYProcedimientosCorrectos;

var
    numero1, numero2, resultado: integer;

function Sumar(a, b: integer): integer;  { Funci칩n que recibe par치metros por valor }
begin
    Sumar := a + b;  { Retorna la suma de a y b }
end;

procedure MostrarResultado(var valor: integer);  { Procedimiento que recibe un par치metro por referencia }
begin
    writeln('El resultado es: ', valor);
end;

begin
    numero1 := 10;
    numero2 := 5;

    { Llamada a la funci칩n Sumar }
    resultado := Sumar(numero1, numero2);

    { Llamada al procedimiento para mostrar el resultado }
    MostrarResultado(resultado);
end.
